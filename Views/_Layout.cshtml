@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Salon Quartz</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Lora&family=Playfair+Display:wght@600&display=swap" rel="stylesheet" />

    <!-- Styles -->
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <header>
        <a href="/" class="logo">SALON QUARTZ</a>

        <nav>
            <ul>
                <li><a href="/">HOME</a></li>
                <li><a href="/booking">BOOK NOW</a></li>
                <li><a href="/shop">SERVICES</a></li>
                <li><a href="/about">ABOUT</a></li>
                <li><a href="/contact">CONTACT</a></li>
            </ul>
        </nav>

        <div style="width: 32px; height: 32px;">
            <svg fill="currentColor" viewBox="0 0 128 128" id="Layer_1" version="1.1" xml:space="preserve" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <g> <path d="M30,49c0,18.7,15.3,34,34,34s34-15.3,34-34S82.7,15,64,15S30,30.3,30,49z M90,49c0,14.3-11.7,26-26,26S38,63.3,38,49 s11.7-26,26-26S90,34.7,90,49z"></path> <path d="M24.4,119.4C35,108.8,49,103,64,103s29,5.8,39.6,16.4l5.7-5.7C97.2,101.7,81.1,95,64,95s-33.2,6.7-45.3,18.7L24.4,119.4z"></path> </g> </g></svg>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="site-footer">
    <div class="footer-content">
        <div class="footer-logo">
            <h2 style="display: inline;">SALON QUARTZ</h2>
        </div>

        <div class="footer-column">
            <h3>MENU</h3>
            <ul>
                <li><a href="/booking">Bookings</a></li>
                <li><a href="/contact">Contact</a></li>
                <li><a href="/terms">Terms & Conditions</a></li>
            </ul>
        </div>

        <div class="footer-column">
            <h3>SOCIAL MEDIA</h3>
            <ul class="social-links">
                <li><a href="#"><span class="circle-icon">f</span> Facebook</a></li>
                <li><a href="#"><span class="circle-icon">I</span> Instagram</a></li>
                <li><a href="#"><span class="circle-icon">t</span> TikTok</a></li>
            </ul>
        </div>

        <div class="footer-column">
            <h3>NEWSLETTER</h3>
            <form class="newsletter-form">
                <input type="email" placeholder="EMAIL" />
                <button type="submit">→</button>
            </form>
        </div>
    </div>

    <div class="footer-bottom">
        <p>© @DateTime.Now.Year, All Rights Reserved — Salon Quartz</p>
    </div>
</footer>

</body>
</html>
